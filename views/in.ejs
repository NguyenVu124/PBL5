<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Vào</title>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
      // $(document).ready(function () {
      //   // $("#a").load("http://localhost:3000/in");
      //   setInterval(function () {
      //     $("#a").load("http://localhost:3000/in");
      //   }, 2000);
      // });
      var my_interval;
      function start_interval() {
        my_interval = setInterval(function () {
          $("#a").load("http://localhost:3000/in");
        }, 2000);
      }
    </script>
    <link rel="stylesheet" type="text/css" href="/css/in.css" />
  </head>
  <body>
    <div class="limiter" id="a">
      <div class="container-login100">
        <div class="wrap-login100">
          <div class="login100-pic js-tilt" data-tilt>
            <img src="<%=data[3] %>" alt="IMG" />
          </div>

          <form
            id="form"
            class="login100-form validate-form"
            action="http://localhost:3000/parking"
            method="POST"
          >
            <span class="login100-form-title"> Xe vào </span>
            <div class="text-center p-t-12">
              <span>Mã thẻ từ</span>
            </div>
            <div
              class="wrap-input100 validate-input"
              data-validate="Valid email is required: ex@abc.xyz"
            >
              <input
                class="input100"
                name="id_random"
                type="hidden"
                value="xm234jq"
                id="random"
              />
              <span class="focus-input100"></span>
              <span class="symbol-input100">
                <i class="fa fa-envelope" aria-hidden="true"></i>
              </span>
            </div>
            <% if(data) {%>
            <div
              class="wrap-input100 validate-input"
              data-validate="Valid email is required: ex@abc.xyz"
            >
              <input
                class="input100"
                type="text"
                name="id_card"
                value="<%=data[0] %>"
              />
              <span class="focus-input100"></span>
              <span class="symbol-input100">
                <i class="fa fa-envelope" aria-hidden="true"></i>
              </span>
            </div>
            <div class="text-center p-t-12">
              <span>Biển số xe</span>
            </div>
            <div
              class="wrap-input100 validate-input"
              data-validate="Password is required"
            >
              <input
                class="input100"
                type="text"
                name="vehicle_number"
                value="<%=data[1] %>"
                id="b"
              />
              <span class="focus-input100"></span>
              <span class="symbol-input100">
                <i class="fa fa-lock" aria-hidden="true"></i>
              </span>
            </div>
            <div class="text-center p-t-12">
              <span>Thời gian vào</span>
            </div>
            <div
              class="wrap-input100 validate-input"
              data-validate="Password is required"
              id="time"
            >
              <input
                class="input100"
                type="text"
                name="time"
                value="<%=data[2] %>"
                readonly
              />
              <span class="focus-input100"></span>
              <span class="symbol-input100">
                <i class="fa fa-lock" aria-hidden="true"></i>
              </span>
            </div>
            <div class="container-login100-form-btn">
              <button class="login100-form-btn">Xác nhận</button>
            </div>

            <div class="text-center p-t-12">
              <a class="txt2" href="http://localhost:3000/parking">
                List parking
              </a>
              <br />
              <a class="txt2" href="http://localhost:3000/history"> History </a>
            </div>
          </form>
          <% } %>
        </div>
      </div>
    </div>
    <script>
      document.getElementById("random").value =
        "vehicle" + Math.floor(Math.random() * 1000);
      // console.log(document.getElementById("random").value);

      // $("body")
      //   .on("focusout", "#form", function (event) {
      //     start_interval();
      //   })
      //   .on("focus", "#form", function (event) {
      //     clearInterval(my_interval);
      //   });

      // document.getElementById("form").addEventListener("focus", (e) => {
      //   console.log("focus");
      //   clearInterval(my_interval);
      // });
      // document.getElementById("form").addEventListener("focusout", (e) => {
      //   console.log("no focus");
      //   start_interval();
      // });

      document.getElementById("b").addEventListener("focus", (e) => {
        console.log("focus");
        clearInterval(my_interval);
      });
      document.getElementById("b").addEventListener("focusout", (e) => {
        console.log("no focus");
        start_interval();
      });
    </script>
  </body>
</html>
