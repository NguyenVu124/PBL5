      $(document).ready(function () {
        // $("#a").load("http://localhost:3000/in");
        setInterval(function () {
          $("#a").load("http://localhost:3000/in");
        }, 2000);
      });
    </script> -->
    <link rel="stylesheet" type="text/css" href="/css/in.css" />
  </head>
  <body>
    <div class="limiter" id="a">
      <div class="container-login100">
        <div class="wrap-login100">
          <div class="login100-pic js-tilt" data-tilt>
            <img src="<%=data[3] %>" alt="IMG" />
          </div>

          <form
            class="login100-form validate-form"
            action="http://localhost:3000/parking"
            method="POST"
          >
            <span class="login100-form-title"> Xe vào </span>
            <div class="text-center p-t-12">
              <span>Mã thẻ từ</span>
            </div>
            <% if(data) {%>
            <div
              class="wrap-input100 validate-input"
              data-validate="Valid email is required: ex@abc.xyz"
            >
              <input
                class="input100"
                type="text"
                name="id_card"
                value="<%=data[0] %>"
              />
              <span class="focus-input100"></span>
              <span class="symbol-input100">
                <i class="fa fa-envelope" aria-hidden="true"></i>
              </span>
            </div>
            <div class="text-center p-t-12">
              <span>Biển số xe</span>
            </div>
            <div
              class="wrap-input100 validate-input"
              data-validate="Password is required"
            >
              <input
                class="input100"
                type="text"
                name="vehicle_number"
                value="<%=data[1] %>"
              />
              <span class="focus-input100"></span>
              <span class="symbol-input100">
                <i class="fa fa-lock" aria-hidden="true"></i>
              </span>
            </div>
            <div class="text-center p-t-12">
              <span>Thời gian vào</span>
            </div>
            <div
              class="wrap-input100 validate-input"
              data-validate="Password is required"
            >
              <input
                class="input100"
                type="text"
                name="time"
                value="<%=data[2] %>"
                readonly
              />
              <span class="focus-input100"></span>
              <span class="symbol-input100">
                <i class="fa fa-lock" aria-hidden="true"></i>
              </span>
            </div>
            <div class="container-login100-form-btn">
              <button class="login100-form-btn">Add</button>
            </div>

            <div class="text-center p-t-12">
              <a class="txt2" href="http://localhost:3000/parking">
                List parking
              </a>
            </div>
          </form>
          <% } %>
        </div>
      </div>
    </div>
  </body>
</html>
