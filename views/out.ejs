<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Ra</title>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <script>
      $(document).ready(function () {
        // $("#a").load("http://localhost:3000/out");
        setInterval(function () {
          $("#a").load("http://localhost:3000/out");
        }, 2000);
      });
    </script>
    <link rel="stylesheet" type="text/css" href="/css/in.css" />
    <link rel="stylesheet" type="text/css" href="/css/button.css" />
  </head>
  <body>
    <div class="limiter" id="a">
      <div class="container-login100">
        <div class="wrap-login100">
          <div class="login100-pic js-tilt" data-tilt>
            <img src="<%=data[3] %>" alt="IMG" />
          </div>

          <% if(message.length > 0){%>
          <div style="color: red"><%= message %></div>
          <%}%>
          <form
            id="form"
            class="login100-form validate-form"
            action="http://localhost:3000/out"
            method="POST"
          >
            <span class="login100-form-title"> Xe vào </span>
            <div class="text-center p-t-12">
              <span>Mã thẻ từ</span>
            </div>
            <% if(data) {%>
            <div
              class="wrap-input100 validate-input"
              data-validate="Valid email is required: ex@abc.xyz"
            >
              <input
                class="input100"
                type="text"
                name="id_card"
                value="<%=data[0] %>"
              />
              <span class="focus-input100"></span>
              <span class="symbol-input100">
                <i class="fa fa-envelope" aria-hidden="true"></i>
              </span>
            </div>
            <div class="text-center p-t-12">
              <span>Biển số xe</span>
            </div>
            <div
              class="wrap-input100 validate-input"
              data-validate="Password is required"
            >
              <input
                class="input100"
                type="text"
                name="plate_number"
                value="<%=data[1] %>"
              />
              <span class="focus-input100"></span>
              <span class="symbol-input100">
                <i class="fa fa-lock" aria-hidden="true"></i>
              </span>
            </div>
            <div class="text-center p-t-12">
              <span>Thời gian vào</span>
            </div>
            <div
              class="wrap-input100 validate-input"
              data-validate="Password is required"
            >
              <input
                class="input100"
                type="text"
                name="time"
                value="<%=data[2] %>"
                readonly
              />
              <span class="focus-input100"></span>
              <span class="symbol-input100">
                <i class="fa fa-lock" aria-hidden="true"></i>
              </span>
            </div>
            <div class="container-login100-form-btn">
              <button class="login100-form-btn">Add</button>
            </div>
            <div class="container-login100-form-btn" id="open">
              <div>
                <a href="" class="login100-form-btn">
                  <span class="txt">Open barrier</span>
                  <span class="round"><i class="fa fa-chevron-right"></i></span>
                </a>
              </div>
            </div>
            <!-- <div class="type-1" style="margin-left: -80px" id="open">
              <div>
                <a href="" class="btn btn-1">
                  <span class="txt">Hover me</span>
                  <span class="round"><i class="fa fa-chevron-right"></i></span>
                </a>
              </div>
            </div> -->

            <div class="text-center p-t-12">
              <a class="txt2" href="http://localhost:3000/parking">
                List parking
              </a>
            </div>
          </form>
          <% } %>
          <!-- <div class="text-center p-t-12">
            <button id="open" style="text-decoration: underline">
              Mở barrier
            </button>
          </div> -->
        </div>
      </div>
    </div>
  </body>
  <script src="/client.js"></script>
</html>
